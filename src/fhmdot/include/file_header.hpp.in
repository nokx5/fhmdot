/* header identifier for yofi */
#pragma once

#include <string>

namespace fhmdot
{

      namespace fheader
      {

            const std::string static version()
            {
                  return "V:@PROJECT_VERSION@";
            }
            const std::string static precision()
            {
#ifndef FLOAT_PRECISION
                  return "P:T";
#else
                  return "P:F";
#endif
            }
            const std::string static text(bool is_complex)
            {
                  auto head = version() + "," + precision() + ",";
                  if (is_complex)
                  {
                        head.append("C:T");
                  }
                  else
                  {
                        head.append("C:F");
                  }
                  return head;
            }

      } // namespace fheader

} // namespace fhmdot
